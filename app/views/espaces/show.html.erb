<div id="espace" class="sortable" style="width:<%= @espace.width %>px; height:<%= @espace.height %>px;background-image : url(<%= @espace.avatar.url %>)">
  <% @espace.ensembles.each do |ensemble| %>
      <div id="ensemble_<%= ensemble.id %>" class="categorie droppable resizable"
      	
      	style="width:<%= ensemble.width %>px; height:<%= ensemble.height %>px; background-image : url(<%= ensemble.avatar.url %>)">
          <h1><%= ensemble.name %></h1>
            <% ensemble.elements.each do |element| %>
		      <div class="element draggable" style="width:<%= element.width %>px; height:<%= element.height %>px; background-image : url(<%= element.avatar.url %>)">
		        <%= element.name %>
		      </div>
	        <% end %>
	</div>
  <% end %>
	<button id="button">Toggle</button>
	









